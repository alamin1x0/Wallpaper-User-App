<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.categoriesActivity.CategoriesActivity">

    <TextView
        android:id="@+id/catTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Abstarct"
        android:textColor="@color/wallpaperprimary"
        android:textSize="39dp" />

    <TextView
        android:id="@+id/catCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/catTitle"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_bold"
        android:text="50 wallpaper available"
        android:textColor="@color/wallpaperprimary"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catRev"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/catCount" />


</RelativeLayout>